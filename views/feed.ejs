<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="css/style.css">
  <title>Sneezy Feed</title>
</head>

<body>
  <section class="topnav">
    <!-- Centered link -->
    <div class="topnav-centered">
      <h1><a href="#home" class="active">Eazy Sneezy Social</a></h1>
    </div>
    <!-- Right-aligned links -->
    <div class="topnav-right">
      <a href="../views/profile.ejs">Profile</a>
      <a href="../controllers/auth.js">Logout</a>
    </div>
  </section>
  <!--Entries-->
  <section>
    <div class="feed-container">
      <ul>
        <% for(var i=0; i<entries.length; i++) {%>
        <li class="card">
          <div class="entry-topper">
            <div class="entry-title">
              <p><%= entries[i].title%></p>
            </div>
            <div class="entry-author">
              <p><%= entries.req.user%></p>
            </div>
          </div>
          <a href="/entries/<%= entries[i]._id%>">
            <img class="feed-img" src="<%= entries[i].image%>">
          </a>
        </li>
      </ul>
    </div>
  </section>

</body>

</html>